{
  "name": "front_lite_chapter3-1",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @front_lite_chapter3-1/before dev",
    "dev:before": "pnpm --filter @front_lite_chapter3-1/before dev",
    "dev:after": "pnpm --filter @front_lite_chapter3-1/after dev",
    "build": "pnpm -r build",
    "build:before": "pnpm --filter @front_lite_chapter3-1/before build",
    "build:after": "pnpm --filter @front_lite_chapter3-1/after build && cp packages/after/dist/index.html packages/after/dist/404.html",
    "storybook": "pnpm --filter @front_lite_chapter3-1/after storybook",
    "build-storybook": "pnpm --filter @front_lite_chapter3-1/after build-storybook",
    "build:deploy": "pnpm build:after && pnpm build-storybook && mv packages/after/storybook-static packages/after/dist/storybook",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:before": "pnpm --filter @front_lite_chapter3-1/before test",
    "test:after": "pnpm --filter @front_lite_chapter3-1/after test",
    "test:run": "pnpm -r test:run",
    "test:run:before": "pnpm --filter @front_lite_chapter3-1/before test:run",
    "test:run:after": "pnpm --filter @front_lite_chapter3-1/after test:run"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}